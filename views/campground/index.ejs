
<% include ../partials/header %>


<div class="container">
    
    <header class="jumbotron"> 
        <h1>Welcome to Campgrounds page!!</h1>
        <p>View our hand-icked camgrounds from all over the world!</p>
        <p>
             <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campgrounds</a>
        </p>
    </header>
    
    
    <div class="row" style="display:flex; flex-wrap: wrap;">
        <% for (var i = 0; i < campgrounds.length; i++) { %>
    
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    
                    <img src=" <%= campgrounds[i].image %>" >
                    
                    <div class="caption text-center">
                        <h4><%= campgrounds[i].name %></h4>
                    </div>
                    
                    <a class="btn btn-primary" href="/campgrounds/<%= campgrounds[i]._id %>">More details</a>
               
                </div>
            </div>
    
        <% } %>
        
    </div>
    
</div>

<% include ../partials/footer %>