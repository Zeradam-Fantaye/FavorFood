<% include ../partials/header %>


    <div class="container">
                
            <h1 style="text-align: center;">Edit <%= food.name %></h1>
            
            <div class="row" style="width: 30%; margin: 25px auto;">
                <form action="/foods/<%= food._id %>?_method=PUT" method="POST">
                    
                    <div class="form-group">
                        <input class="form-control" type="text" name="food[name]" value="<%= food.name %>">
                    </div>
                    
                    <div class="form-group">
                        <input class="form-control" type="number" name="food[price]" value="<%= food.price %>" min="0.01" step="0.01">
                    </div>
                    
                    <div class="form-group">
                        <input class="form-control" type="text" name="food[image]" value="<%= food.image %>">
                    </div>
                    
                    <div class="form-group">
                        <input class="form-control" type="text" name="food[desc]" value="<%= food.description %>">
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary">SUBMIT!!!</button>
                    </div>
                    
                </form>
                
                <a href="/foods">Go back!!</a> 
                
            </div>
        
    </div>
   

<% include ../partials/footer %>